pipeline {

  environment {
    registry = "harbor.labo.local/tkr/webapl-pd"
    dockerImage = ""
    KUBECONFIG = credentials('prod-k8s3-webapl-pd')
  }

  agent any
  stages {

    stage('GitLabからソースコード取得') {
      steps {
        echo 'Notify GitLab'
        updateGitlabCommitStatus name: 'build', state: 'pending'
        updateGitlabCommitStatus name: 'build', state: 'success'
      }
    }

    stage('コンテナイメージの脆弱性検査') {
      steps {
        script {
          sh 'echo "check 1"'
        }
      }
    }

    stage('コンテナの単体テスト') {
      steps {
        script {
          sh 'echo "check 2"'
        }
      }
    }

    stage('K8sクラスタへのデプロイ') {
      steps {
        script {
          sh 'kubectl cluster-info --kubeconfig $KUBECONFIG'
          sh 'kubectl apply -f webapl-pd-prod.yaml --kubeconfig $KUBECONFIG'
        }
      }
    }

  }
}


